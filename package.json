{
    "name": "@sturle/convert",
    "version": "0.0.4",
    "description": "CLI tool for converting units.",
    "main": "./dist/index.js",
    "type": "module",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "bin": "dist/index.js",
    "scripts": {
        "convert": "node ./dist/index.cjs",
        "build": "tsup src/index.ts --format cjs,esm --clean",
        "dev": "tsx ./src/index.ts",
        "test": "jest",
        "prepublish": "pnpm run build",
        "pub": "pnpm publish --access public"
    },
    "keywords": [
        "units",
        "conversion",
        "cli"
    ],
    "author": "Sturlen",
    "files": [
        "/dist"
    ],
    "license": "MIT",
    "repository": "https://github.com/Sturlen/convert/",
    "dependencies": {},
    "devDependencies": {
        "tsup": "^8.0.1",
        "tsx": "^4.6.2",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    }
}
