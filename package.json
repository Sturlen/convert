{
    "name": "@sturlen/convert",
    "version": "0.0.16",
    "description": "CLI tool for converting units.",
    "main": "./dist/index.js",
    "type": "module",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "bin": "dist/index.js",
    "scripts": {
        "convert": "node ./dist/index.cjs",
        "build": "tsup src/index.ts --format cjs,esm --clean",
        "build:watch": "tsup src/index.ts --format cjs,esm --clean --watch",
        "test": "jest",
        "release": "release-it"
    },
    "keywords": [
        "units",
        "conversion",
        "cli"
    ],
    "author": "Sturlen",
    "files": [
        "/dist"
    ],
    "license": "MIT",
    "repository": "https://github.com/Sturlen/convert/",
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "jest": "^29.7.0",
        "release-it": "^17.0.1",
        "ts-jest": "^29.1.1",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    }
}
